<%= form_with(model: playlist, class: "space-y-4") do |f| %>
  <% if playlist.errors.any? %>
    <div role="alert" class="bg-red-900/50 border border-red-800 rounded p-3">
      <ul class="text-sm text-red-300 list-disc list-inside">
        <% playlist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm text-gray-300 mb-1" %>
    <%= f.text_field :name, required: true, class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2 text-gray-100 text-sm focus:outline-none focus:border-blue-500", aria: { invalid: playlist.errors[:name].any?, describedby: (playlist.errors[:name].any? ? "name-error" : nil) } %>
    <% if playlist.errors[:name].any? %>
      <p id="name-error" class="text-sm text-red-400 mt-1"><%= playlist.errors[:name].join(", ") %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm text-gray-300 mb-1" %>
    <%= f.text_area :description, rows: 3, class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2 text-gray-100 text-sm focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit class: "bg-blue-600 hover:bg-blue-500 text-white text-sm px-4 py-2 rounded cursor-pointer" %>
    <%= link_to "Cancel", (playlist.persisted? ? playlist_path(playlist) : playlists_path), class: "text-gray-400 hover:text-gray-200 text-sm" %>
  </div>
<% end %>
