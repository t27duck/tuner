<%= tag.tr class: "block md:table-row bg-gray-900 md:bg-transparent rounded-lg md:rounded-none p-3 md:p-0 mb-2 md:mb-0 border border-gray-800 md:border-x-0 md:border-t-0 relative hover:bg-gray-900/50",
    data: { controller: "context-menu",
            context_menu_edit_url_value: edit_song_path(song),
            context_menu_delete_url_value: song_path(song),
            context_menu_song_title_value: song.title } do %>
  <td class="block md:table-cell absolute md:static top-3 left-3 md:px-4 md:py-3">
    <input type="checkbox" value="<%= song.id %>" data-multi-select-target="checkbox" data-action="change->multi-select#toggle" aria-label="Select <%= song.title %>" class="rounded bg-gray-800 border-gray-700">
  </td>
  <td class="block md:table-cell pl-9 md:pl-4 md:px-4 md:py-3 font-medium text-gray-100 cursor-pointer"
      tabindex="0" role="button"
      data-controller="inline-edit"
      data-inline-edit-url-value="<%= song_path(song) %>"
      data-inline-edit-field-value="title">
    <%= song.title %>
  </td>
  <td class="block md:table-cell pl-9 md:pl-4 md:px-4 md:py-3 text-sm md:text-base text-gray-400 md:text-gray-300 cursor-pointer"
      tabindex="0" role="button"
      data-controller="inline-edit"
      data-inline-edit-url-value="<%= song_path(song) %>"
      data-inline-edit-field-value="artist">
    <%= song.artist %>
  </td>
  <td class="block md:table-cell pl-9 md:pl-4 md:px-4 md:py-3 text-sm md:text-base text-gray-500 md:text-gray-300 cursor-pointer"
      tabindex="0" role="button"
      data-controller="inline-edit"
      data-inline-edit-url-value="<%= song_path(song) %>"
      data-inline-edit-field-value="album">
    <%= song.album %><% if song.year.present? %><span class="md:hidden text-gray-500"> (<%= song.year %>)</span><% end %>
  </td>
  <td class="hidden md:table-cell md:px-4 md:py-3 text-gray-300 cursor-pointer"
      tabindex="0" role="button"
      data-controller="inline-edit"
      data-inline-edit-url-value="<%= song_path(song) %>"
      data-inline-edit-field-value="genre">
    <%= song.genre %>
  </td>
  <td class="hidden md:table-cell md:px-4 md:py-3 text-gray-300 cursor-pointer"
      tabindex="0" role="button"
      data-controller="inline-edit"
      data-inline-edit-url-value="<%= song_path(song) %>"
      data-inline-edit-field-value="year">
    <%= song.year %>
  </td>
  <td class="hidden md:table-cell md:px-4 md:py-3 text-gray-300 cursor-pointer"
      tabindex="0" role="button"
      data-controller="inline-edit"
      data-inline-edit-url-value="<%= song_path(song) %>"
      data-inline-edit-field-value="track_number">
    <%= song.track_number %>
  </td>
  <td class="hidden md:table-cell md:px-4 md:py-3 text-gray-300 cursor-pointer"
      tabindex="0" role="button"
      data-controller="inline-edit"
      data-inline-edit-url-value="<%= song_path(song) %>"
      data-inline-edit-field-value="disc_number">
    <%= song.disc_number %>
  </td>
  <td class="block md:table-cell absolute md:static top-3 right-3 md:px-4 md:py-3">
    <%= link_to edit_song_path(song), class: "text-blue-400 hover:text-blue-300", "aria-label": "Edit #{song.title}" do %>
      <svg class="w-4 h-4 inline" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
    <% end %>
  </td>
<% end %>
